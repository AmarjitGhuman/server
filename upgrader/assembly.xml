<assembly>
	<id>upgrader</id>
	<!-- Generates a zip package of Authzforce webapp + configuration files -->
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/main</directory>
			<excludes>
				<exclude>ivy</exclude>
				<exclude>lib</exclude>
			</excludes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>