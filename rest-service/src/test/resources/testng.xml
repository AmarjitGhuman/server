<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="AuthZForce.PDP.REST.API.TestSuite" parallel="false" verbose="1">
	<!-- If you uncomment the <parameter>s below left here as a reminder, it overrides any JVM argument with same name passed on the command-line (e.g. -Dapp.base.url for parameter 'app.base.url'). So leave it commented out with you want to pass the parameter on the command-line. -->
	<!-- Base URL of the AuthZForce webapp to be tested (up to the context root) -->
	<!-- <parameter name="app.base.url" value="http://localhost/authzforce-ce" /> -->
	<!-- If the tested server is remote, set this to false to avoid starting the embedded server. -->
	<!-- <parameter name="start.server" value="false" /> -->
	<!-- True iff the filesystem local to the server is a "legacy" filesystem, meaning here that millisecond or higher resolution of file timestamps is not supported. This is the case of 'ext3'; whereas 'ext4' supports nanosecond resolution. Resolution lower than the millisecond has a negative impact on Authzforce file synchronization features, insofar as a file change in less than a second after the last sync will go undetected (the file's mtime timestamp is not modified in this case). 
	If this parameter is set to true, the unit tests will make sure this does not happen to avoid false results.
	-->
	<parameter name="legacy.fs" value="true" />
	<parameter name="org.ow2.authzforce.domain.maxPolicyCount" value="10" />
	<parameter name="org.ow2.authzforce.domain.policy.maxVersionCount" value="10" />
	<parameter name="org.ow2.authzforce.domain.policy.removeOldVersionsIfTooMany" value="false" />
	<parameter name="org.ow2.authzforce.domains.sync.interval" value="0" />
	<test name="WithoutAutoSyncOrVersionRemovalIfTooMany" preserve-order="true" enabled="true">
		<classes>
			<class name="org.ow2.authzforce.rest.service.test.DomainSetTest">
				<methods>
					<!-- invocation-numbers not working as expected: https://github.com/cbeust/testng/issues/613 <include name="addDomain" invocation-numbers="3" /> -->
					<include name="getWADL" />
					<include name="addAndGetDomain" />
					<include name="getDomains" />
					<include name="getDomain" />
					<include name="getDomainByExternalId" />
					<include name="addDomainWithTooBigDescription" />
					<include name="addDomainWithTooBigExternalId" />
					<include name="getDomainsAfterFileModifications" />
					<include name="deleteDomainAfterDirectoryDeleted" />
					<include name="getPdpAfterDomainDirCreated" />
					<include name="deleteDomains" />
				</methods>
			</class>
			<!-- Domain-specific testing -->
			<class name="org.ow2.authzforce.rest.service.test.DomainMainTestWithoutAutoSyncOrVersionRemoval" />
		</classes>
	</test>
	<test name="WithAutoSyncAndVersionRemovalIfTooMany" preserve-order="true" enabled="true">
		<parameter name="org.ow2.authzforce.domain.policy.removeOldVersionsIfTooMany" value="true" />
		<parameter name="org.ow2.authzforce.domains.sync.interval" value="4" />
		<classes>
			<!-- Domain-specific testing -->
			<class name="org.ow2.authzforce.rest.service.test.DomainTestWithAutoSyncAndVersionRemoval" />
		</classes>
	</test>
</suite> 

